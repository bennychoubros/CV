#---------------------------------| RESUME |-----------------------------------#
CV	= resume.pdf 
#------------------------------------------------------------------------------#

#-------------------------------| COMPILATION |--------------------------------#
CC	= pdflatex
#------------------------------------------------------------------------------#

#------------------------------| SOURCE FILES |--------------------------------#
SRCS	= 
#------------------------------------------------------------------------------#

#-------------------------------| OBJ FILES |----------------------------------#
OBJS	= 
#------------------------------------------------------------------------------#


.PHONY	:	all clean fclean re

#----------------------------------| RULES |-----------------------------------#
all: $(CV)

$(CV): $(SRCS)
	$(CC) main.tex

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(CV)

re: fclean all
#------------------------------------------------------------------------------#
