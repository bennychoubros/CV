#---------------------------------| RESUME |-----------------------------------#
CV	= resume.pdf 
#------------------------------------------------------------------------------#

#-------------------------------| COMPILATION |--------------------------------#
CC	= pdflatex
#------------------------------------------------------------------------------#

#------------------------------| SOURCE FILES |--------------------------------#
SRCS	= main.tex
#------------------------------------------------------------------------------#

#-------------------------------| OBJ FILES |----------------------------------#
OBJS	= 
#------------------------------------------------------------------------------#


.PHONY	:	all clean fclean re

#----------------------------------| RULES |-----------------------------------#
all: $(CV)

$(CV):
	$(CC) -jobname=$(subst .pdf,,$@) $(SRCS) 

clean:
	rm -f *.aux *.log *.out

fclean: clean
	rm -f $(CV)

re: fclean all
#------------------------------------------------------------------------------#
